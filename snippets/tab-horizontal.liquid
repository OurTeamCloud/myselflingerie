    <div class="wrapper-tab-content">
        {% if section.settings.display_product_detail_description %}

        {% assign des = product.description %}
        {% if des contains '[countdown]' or product.description contains '[custom tab]' %}
        {% assign des = product.description | split:'[/countdown]</p>' | last %}
        {% assign des = des | split:'[custom tab]' | first | split:'<iframe' | first %}
      	
        {% endif %}
      
      	{% if des contains '[des]' %}
		{% assign des = des | split:'[des]' | first %}
      	{% endif %}

        <div class="tab-title">
            <a href="#" data-tapTop data-target="#collapse-tab1" class="tab-links active">
                {% render 'multilang' with section.settings.product_description_title %}
                <span class="icon-dropdown">
                <i class="fa fa-angle-down"></i>
                </span>
            </a>
        </div>

        <div class="tab-content active" data-TabContent id="collapse-tab1">
            {% if settings.enable_multilang and des contains '[lang2]' %}
              
            <div class="lang1">
                {{ des | split: '[lang2]' | first }}
            </div>
            <div class="lang2">
                {{ des | split: '[lang2]' | last }}
            </div>
            {% else %}
            <div>
                {{ des | split: '[lang2]' | first }}
            </div>
          
            {% endif %}

            {% render 'product-detail-gallery_lookbook', product: product %}
        </div>
        {% endif %}

      
<!-- jt -->
{% if product.metafields.fit_guide_tab.enable_fit_guide_tab %}  
      	<div class="tab-title">
                <a href="#" data-tapTop data-target="#collapse-tab_fit_guide" class="tab-links">
                    Fit Guide
                    <span class="icon-dropdown">
                    <i class="fa fa-angle-down"></i>
                    </span>
                </a>
            </div>
            <div class="tab-content" data-TabContent id="collapse-tab_fit_guide">
              
                <div>
                 	
                  <div class="row">
                  	<div class="col-md-6">
                      
                      <div class="row">
                  		<div class="col-md-8">
                          
                              <div class="chat-bubble chat-bubble-product">
                                <p><b>FITTER'S TIPS</b></p>
                                <p class="text-left">{{product.metafields.fit_guide.fitter_s_tips}}</p>
                                
                                <p><b>RECOMMENDATIONS</b></p>
                                <p class="text-left">{{product.metafields.fit_guide.recommendations}}</p>
                                
                              </div>
                        </div>
                      
                  		<div class="col-md-4 text-center">
                          
                      		<img style="align:right" src="https://cdn.shopify.com/s/files/1/0057/7896/4580/files/mylie_166x.png?v=1642884422">
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6" style="align-self:center">
                      	
                      
                      	{% assign current_variant = product.selected_or_first_available_variant %}
						{% assign fit_guide_extras = product.metafields.fit_guide_extra.fit_guide_attributes %}
                      
                      
                      	{% assign fguidextra_items = fit_guide_extras | split: ',' %}
  
                      <p><b><span class="jextra-attr-head">Item Number:</span> <span class="variant-sku" style="color:#CEB98E">{{ current_variant.sku }}</span></b>
                        
                      <ul class="extra-attr">
                        
                        <li>
                          <span class="extra-attr-head">Category</span><span class="extra-attr-value">{{collection.title}}</span>  
                        </li>
                        
                        {% for fguidextra_item in fguidextra_items %}
                          {% assign fguidextra_item_split = fguidextra_item | split: ':' %}
                          	<li>
                        		<span class="extra-attr-head">{{fguidextra_item_split[0]}}</span><span class="extra-attr-value">{{fguidextra_item_split[1]}}</span>  
                        	</li>
                        {% endfor %}
                        
                        
                      </ul>
                    </div>
                  </div>
                  
                </div>
            </div>
{% endif %}
<!-- eof jt -->

        
<!-- jt -->      
      	<div class="tab-title">
                <a href="#" data-tapTop data-target="#collapse-tab_size_chart" class="tab-links">
