                    <span class="icon-dropdown">
                    <i class="fa fa-angle-down"></i>
                    </span>
                </a>
            </div>
            <div class="tab-content" data-TabContent id="collapse-tab_size_chart">
                <div>
                 {% render 'size-chart-msl' %}
                </div>
            </div>
