<div class="home-custom-block hero-section" id="custom-block-{{section.id}}">
  	<div class="{% if section.settings.layout == 'default' %}container{% else %}container-fluid{% endif %}">
      
      <div class="row">
        	
        	<div class="hero-box img-box col-12 col-lg-6 column">
              
              {%- assign img_url = section.settings.bgimage | img_url: 'original'-%}
              <div class="col-bg" style="
              background: url('{{img_url}}') no-repeat center;
              background-size:cover;
              min-height:100%;
              vertical-align:middle;
              ">
                <div class="left-col-content">
                    <h2 class="section-title">
                      {{section.settings.hero-right-content}}
                    </h2>
                    {% if section.settings.btntext != '' %}
                      <a href="{{section.settings.btnlink}}" title="{{section.settings.btntext}}" class="btn">           
                      <span>
                        {{section.settings.btntext}}
                      </span>
                      </a>
                    {% endif %}
                  
                </div>
              </div>
            </div>
              
            <div class="collections-box col-12 col-lg-6 column">
              
              {% if section.blocks.size > 0 %}
              
              	<div class="row hero-collection-block">
            		{% for block in section.blocks %}
                  		{% case block.type %}
                  
                  		{% when 'html' %}
                          
                  			<div class="img-box col-12 col-sm-6 column">
                              <a class="collection-item" href="{{ block.settings.btnlink }}">
                              <div class="row justify-center">
                                
                                
                                  <div class=" col-6 vertical-center">
                                    <div class="btn">{{ block.settings.btntext }}</div>
                                  </div>
                                	
                                  <div class="col-6 svg-img" style="background-image:url({{ block.settings.collectionimage | img_url: 'original'  }})">
                                    
                                    
                                    
                                    {% comment %}
                                    <img src="{{ block.settings.collectionimage | img_url: 'original'  }}">
                                    
                                    {{ block.settings.code }}
                                    <img src="{{ block.settings.code | asset_url }}" style="height:{{ block.settings.blocksvgheight}}; width:{{ block.settings.blocksvgwidth}}">
                                  	{% endcomment %}
                                	
                                </div>
                                
                              </div>
                                </a>
                               
                          </div>
                  
                        {% endcase %}
                  		
                        
                              
              		{% endfor %}
              	</div>
              {% endif %}
              
            </div>
        
      </div>
      
      
  	</div>
</div>



